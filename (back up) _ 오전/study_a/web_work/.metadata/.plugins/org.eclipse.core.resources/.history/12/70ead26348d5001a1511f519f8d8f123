<h1>05_funcVar2</h1>
<script>
var totHap = 0, cntHap = 0
function order(menu, cnt){
	var price = {
		"아메리카노":2700,
		"아시아노":3000,
		"아프리카노":3200
	}
	
	var tot = price[menu]*cnt
	document.write(menu+":"+cnt+"("+tot+")<br>")
	totHap += tot
	cntHap += cnt
}

order("아프리카노",3)
order("아메리카노",2)
order("아시아노",3)
order("아메리카노",1)
order("아시아노",2)
order("아프리카노",3)

document.write("합계:"+cntHap+"("+totHap+")<br>")
</script>
</body>
</html>