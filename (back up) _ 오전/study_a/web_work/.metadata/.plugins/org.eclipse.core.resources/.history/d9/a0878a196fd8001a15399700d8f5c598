	width:300px;
	height:217px;
	
}
</style>
<script>
window.onload =function(){
	
	var last = 0
	glass = document.getElementsByClassName("glass")[0]
	big = document.getElementsByClassName("big")[0]	
	
	glass.onmousedown = function(e){
		last = e.pageX
		console.log("눌렀냐")
	}
	
	glass.onmouseup = function(e){
		if(e.pageX>last){
			console.log("->")	
		}else{
			console.log("<-")
		}
		
	}
}


</script>
