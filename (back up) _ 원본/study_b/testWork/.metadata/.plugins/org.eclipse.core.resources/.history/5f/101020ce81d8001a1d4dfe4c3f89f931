package control_p;

public class IfMain {

	public static void main(String[] args) {

		int a = 10;
		if(false) {
			// {}  안의 구간은 전부 if문의 종속 구간임
			System.out.println("true 이지롱1");
			System.out.println("true 이지롱2");
			System.out.println("true 이지롱3");
			System.out.println("true 이지롱4");
			a = 30;
		}
		
		if(false)//;  /// {} 없이 사용할 경우 if문 다음 실행구문 1개만 해당
			//실행구문의 기준은 구문 종결어 ; 로 구분

			System.out.println("참 이지롱 1");
		
		
		
		System.out.println("참 이지롱 2");
		System.out.println("참 이지롱 3");
		System.out.println("참 이지롱 4");
		
		
		int b = 78;
		String res = "불합격";
		
		String res2;
		
		//if(b >= 70) {
		if(true) {
			res = "합격";
			res2 = "합격";
		}
		
		
		
		System.out.println("시스템 종료:"+a+","+res+","+res2);
		
		//if(true)  //{} 없이 사용할 경우 반드시 1개의 실행구문이 있어야 한다
					//없으면 에러

	}

}
