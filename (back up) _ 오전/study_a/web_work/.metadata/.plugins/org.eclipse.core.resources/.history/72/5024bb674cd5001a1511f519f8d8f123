<meta charset="UTF-8">
<title>06_selfCall</title>
</head>
<body>
<h1>06_selfCall</h1>
<script>
	var pre = ""
	function fn(no){
		
		var res = 0
		var myPre = pre
		pre+="&nbsp;&nbsp;&nbsp;"
		document.write(myPre+"fn("+no+","+res+") 시작<br>")
		if(no>0) 	 //조건
			res = no+fn(no-1) //증감
		document.write(myPre+"fn("+no+","+res+") 끝<br>")
		
		return res
		
	}

	fn(5)  //함수호출 - 초기값
</script>
</body>
</html>