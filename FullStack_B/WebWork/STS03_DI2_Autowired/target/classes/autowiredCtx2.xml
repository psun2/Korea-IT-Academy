<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

	<!-- Qualifire 을 사용한(모호한 객체가 있는) Autowired -->

	<!-- Spring Bean Configuration File -->
	<!-- 어떠한 오류 또는 내용변경시 -->
	<!-- project => 우클릭 => Maven => Update -->
	
	<!-- 우클릭 => open with => Spring config Editor -->
	<!-- 하단의 Namespaces -->
	<!-- c 와 p 클릭 -->
	<!-- 
		xmlns:c="http://www.springframework.org/schema/c" => constructor
		xmlns:p="http://www.springframework.org/schema/p" => property
		xmlns:context="http://www.springframework.org/schema/context" => autowired
	 -->
	 
	<!-- autowired 사용을 위한 context import -->
	<context:annotation-config />
	 
	<!-- @Qualifier 를 사용하여, 동일 타입 빈의 모호성 제거 -->
	<bean id="dao1" class="com.lec.beans.DAO">
		<constructor-arg value="DAO_MEMBER" />
	<!-- qualifying : bean 의 식별자를 제공 합니다. -->
	<!-- @Qualifier 는 @Autowired 와 달리 ‘멤버변수’ 와 ‘setter’ 에만 적용 가능 (생성자 에는 적용 불가) -->
		<qualifier value="memberDAO"/>
	</bean>

	<bean id="dao2" class="com.lec.beans.DAO">
		<constructor-arg value="DAO_BOARD" />
		<qualifier value="boardDAO"/>
	</bean>

	<!-- autowire field: com.lec.beans.DAO com.lec.beans.ListService.memberDao; 
		nested exception is org.springframework.beans.factory.NoUniqueBeanDefinitionException: 
		No qualifying bean of type [com.lec.beans.DAO] is defined: expected single 
		matching bean but found 2: dao1,dao2 -->
	<!-- NoUnique : 유니크 하지 않음 -->
	<bean id="listService" class="com.lec.beans.ListService" />
	
	<!-- 
		동일 타입의 DAO 객체가 여러개이고 qualifier 가 지정되어 있지 않으면 이름이 같은 것으로 찾는다.
		bean 의 id 와 맴버변수의 변수 이름이 같은 것 을 찾아 주입합니다.
	 -->
	
	<bean id="myDao" class="com.lec.beans.DAO">
		<constructor-arg value="DAO_VOTE" />
		<!-- <qualifier value="boardDAO"/>  -->
	</bean>
	
	<bean id="viewService" class="com.lec.beans.ViewService" />
	
	<bean id="pageService" class="com.lec.beans.PageService" />

</beans>
