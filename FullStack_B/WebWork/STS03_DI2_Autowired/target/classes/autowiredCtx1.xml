<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

	<!-- Qualifire 을 사용안한(모호한 객체가 없는) Autowired -->

	<!-- Spring Bean Configuration File -->
	<!-- 어떠한 오류 또는 내용변경시 -->
	<!-- project => 우클릭 => Maven => Update -->
	
	<!-- 우클릭 => open with => Spring config Editor -->
	<!-- 하단의 Namespaces -->
	<!-- c 와 p 클릭 -->
	<!-- 
		xmlns:c="http://www.springframework.org/schema/c" => constructor
		xmlns:p="http://www.springframework.org/schema/p" => property
		xmlns:context="http://www.springframework.org/schema/context" => autowired
	 -->
	 
	 <!-- autowired 사용을 위한 context import -->
	 <context:annotation-config />
	 
	 <!-- DAO 객체 생성 -->
	 <bean id="dao1" class="com.lec.beans.DAO" c:uid="DAO_1" />
	 
	 <!-- 다형성으로 인한 DAO를 상속받은 DAOEx 클래스가 자동 주입 가능 합니다. -->
	 <bean id="dao2" class="com.lec.beans.DAOEx" c:uid="DAO_EX" />
	
	 <!-- 명시적 주입 -->
	 <!-- RegisterService 객체 생성 -->
	 <bean id="regService" class="com.lec.beans.RegisterService">
	 	<constructor-arg ref="dao1" />
	 </bean>
	 
	<!-- 생성자 autowired -->
	<!-- autowired 로 인하여 Error 사라짐 -->
	<bean id="readService" class="com.lec.beans.ReadService" />

	<!-- 맴버변수 autowired -->
	<bean id="updateService" class="com.lec.beans.UpdateService" />

	<!-- setter autowired -->
	<bean id="deldteService" class="com.lec.beans.DeleteService" />

</beans>
