package oops_p;

import java.util.Arrays;

class Stud{
	
	String name;
	
	int [] jum;
	
	int tot;
	
	double avg;
	
	
}

public class StudMain {

	public static void main(String[] args) {
		Stud st1 = new Stud();
		Stud st2 = new Stud();
		Stud st3 = new Stud();
		
		st1.name = "이효리";
		st1.jum = new int[]{77,79,71};
		
		st2.name = "삼효리";
		st2.jum = new int[]{97,99,91};
		
		st3.name = "사효리";
		st3.jum = new int[]{87,89,81};
		
		
		
		//System.out.println(st1);
		Stud [] arr = {st1, st2, st3};
		
		for (int j : arr[0].jum) {
			arr[0].tot += j;
		}
		arr[0].avg = (double)arr[0].tot/arr[0].jum.length;
		
		System.out.println(arr[0].name);
		System.out.println(Arrays.toString(arr[0].jum));
		System.out.println(arr[0].tot);
		System.out.println(arr[0].avg);
		
		

	}

}

