package basic;

public class TypeMain {

	public static void main(String[] args) {
		System.out.println("1. 정수 >>>>>");
		
		byte bb = 10;
		System.out.println(bb);
		bb = 127;
		//bb = 128;
		//bb = 12.345;
		//bb = true;
		bb = 'a';
		System.out.println(bb);
		short sh = 128;
		sh = 32767;
		sh = -32768;
		//sh = -32769;
		System.out.println(sh);
		int ii = -32769;
		ii = 2147483647;
		//ii = 2147483648L;
		System.out.println(ii);
		long lo = 2147483647;
		lo = 2147483648L;   //정수는 자료형이 int -> 
		//long의 영역 까지 표현하기 위해서는 숫자뒤에 L 혹은 l 표기
		
		System.out.println(lo);
		
		System.out.println("2. 실수 >>>>>");
		
		float ff = 123.456456789456123456f;
		//123.45646 까지 표현
		//float 표현하기 위해서는 숫자뒤에 F 혹은 f 표기
		ff = 123;
		System.out.println(ff);
		double dd = 123.456789456123456; //실수는 자료형이  double -> 
		//123.456789456123456 출력
		dd = 123;
		System.out.println(dd);
		
		System.out.println("3. 글자 >>>>>");
		char ch = 'a';
		ch = '가';
		//ch = '';
		//ch = 'korea';
		//ch = "a";
		ch = 100;
		System.out.println(ch);
		
		System.out.println("4. boolean >>>>>");
		boolean bo = true;
		bo = false;
		//bo = 1;
		//bo = 0;
		//bo = TRUE;
		//bo = "true";
		//bo = 't';
		System.out.println(bo);
	}

}
